// 设置博客总体颜色基调
h1,
h2,
h3,
h4,
h5,
h6 {
  color: #000000;
}
//博客主标题
.site-title {
  font-weight bolder;
  font-size 1.6em;
  color: #ffffff;
}
//博客副标题
.site-subtitle {
  font-size 1.0em
}

.menu .menu-item .badge {
  display: inline-block;
  padding: 0.1em 0.4em;
  margin-left: 5px;
  font-weight: 700;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  background-color: #a9a6a654;
}

// 菜单超链接字体大小
.menu .menu-item a {
  font-size: 16px;
}
// 菜单各项边距
.menu .menu-item {
  margin: 5px 15px;
}
// 菜单超链接样式
.menu .menu-item a:hover {
  border-bottom-color: rgba(190, 102, 171, 0);
}
.menu a {
  background-color: rgba(0, 0, 0, 0);
  color: #273E47;
}

.moon-menu-cricle {
  fill: #284B63 !important
}


// 设置卡片是否透明
.post-block{
  background: rgba(252,254,251,0.88);
}
.btn {
  background: rgba(252,254,251,0.88);
}
.sidebar-inner{
  background: rgba(252,254,251,0.9);
}
//文章内容的透明度设置
.content-wrap {
  opacity: 0.9;
}
//侧边框的透明度设置
.sidebar {
  opacity: 0.9;
}
//菜单栏的透明度设置
.header-inner {
  background: rgba(252,254,251,0.90);
}
//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.9;
}
.links-of-blogroll-list a {
  color #923A56 !important
}

// 设置背景图片
body {
    background:url(../img/back3.jpg);
    background-repeat: repeat-x;
    background-attachment:fixed; //不重复
    background-size: cover;      //填充
    background-position:50% 50%;
}



.links-of-blogroll-list a {
  font-size 14px
  color #5038b8
  font-weight bold
}
.links-of-blogroll-title {
  font-size 16px
}
a {
  border-bottom none
}

