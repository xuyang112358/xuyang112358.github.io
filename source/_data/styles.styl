// 文章内标题样式（左边的竖线）
.post-body h1, .post-body h2 {
  border-bottom 1px solid #eeeeee
  border-left 6px solid #923A56;
  margin-left: -10px;
  padding-left: 10px;
  padding-top 2px;
  padding-bottom 2px;
}

.post-body h3, .post-body h4, .post-body h5, .post-body h6 {
  border-bottom 1px solid #eeeeee
  padding-top 2px;
  padding-bottom 2px;
}

mjx-container {
  font-size 100% !important
}

.post-body {
  font-size 1.25em
}


.site-description, .site-state-item-name, .site-state-item-name {
  font-size 0.875em
}

